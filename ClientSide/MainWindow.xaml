<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="ChatTextBox" Grid.Row="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        <TextBox x:Name="MessageTextBox" Grid.Row="1" Margin="10" VerticalAlignment="Center"/>
        <Button Content="Send" Grid.Row="1" Margin="10" HorizontalAlignment="Right" Click="SendButton_Click"/>
    </Grid>
</Window>
